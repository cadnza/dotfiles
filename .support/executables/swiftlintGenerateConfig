#!/usr/bin/env bash

# Open final string
final="only_rules:"

# Open loop through specifified rules
while read -r rule
do

	# Append rule to final
	final="$final\n  - $rule"

done < <(
	swiftlintToJson | \
		jq -r '.[] | select(.kind != "style" and .analyzer == false) | .id' # We want swift-format to do most of the actual formatting
)

echo -e "$final"
