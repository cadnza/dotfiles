// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "language_models": {
    "ollama": {
      "available_models": [
        {
          "name": "devstral-small-2",
          "max_tokens": 49152, // Max 49152 for 100% GPU
          "display_name": "devstral-small-2-tight",
          "supports_tools": true,
          "keep_alive": 300,
        },
        {
          "name": "qwen3-coder",
          "max_tokens": 49152, // Max 49152 for 100% GPU
          "display_name": "qwen3-coder-tight",
          "supports_tools": true,
          "keep_alive": 300,
        },
      ],
    },
  },
  "buffer_font_features": { "calt": false }, // Disables ligatures
  "colorize_brackets": true,
  "lsp_document_colors": "inlay",
  "indent_guides": {
    "coloring": "indent_aware",
  },
  "icon_theme": "Material Icon Theme",
  "diagnostics": { "inline": { "enabled": false } },
  "wrap_guides": [80, 120],
  "agent": {
    "show_turn_stats": true,
    "default_model": {
      "provider": "ollama",
      "model": "qwen3-coder",
    },
  },
  "edit_predictions": {
    "mode": "subtle",
  },
  "theme": "Ayu Dark",
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "inlay_hints": {
    "enabled": false,
    "show_background": true,
    "toggle_on_modifiers_press": { "control": true, "alt": true },
  },
  "tabs": {
    "activate_on_close": "neighbour",
    "file_icons": true,
    "show_diagnostics": "all",
    "git_status": true,
  },
  "tab_bar": { "show": true, "show_nav_history_buttons": false },
  "show_wrap_guides": true,
  "soft_wrap": "editor_width",
  "minimap": {
    "display_in": "all_editors",
    "show": "always",
    "thumb": "always",
  },
  "git": {
    "inline_blame": { "enabled": false },
  },
}
