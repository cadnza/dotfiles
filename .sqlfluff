# See https://docs.sqlfluff.com/en/stable/rules.html

[sqlfluff]
exclude_rules = L011,L012,L013,L014,L022,L031,L034,L036

[sqlfluff:indentation]
indented_joins = True

[sqlfluff:rules]
tab_space_size = 4
max_line_length = 80
indent_unit = tab
comma_style = trailing
allow_scalar = True
unquoted_identifiers_policy = all

[sqlfluff:rules:L010]
capitalisation_policy = upper

[sqlfluff:rules:L016]
ignore_comment_lines = True

[sqlfluff:rules:L030]
capitalisation_policy = upper

[sqlfluff:rules:L040]
capitalisation_policy = upper

[sqlfluff:rules:L047]
prefer_count_1 = True
